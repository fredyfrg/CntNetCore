@model IEnumerable<CntNetCore.Models.Pacientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Pacientes</h1>

<p>
    <a asp-action="Create"><button class="btn btn-primary">Nuevo</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fumador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Añosfumador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dieta)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.PesoEstatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fumador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Añosfumador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dieta)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.PesoEstatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Documento">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Documento">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Documento">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
